@model RailRoad.DataPersistence.Entities.Site
<div class="d-flex justify-content-center">
    <div class="col-md-6 shadow">
        <form method="post" asp-action="AddSite" asp-controller="Sites" class="form-group">
            <input hidden asp-for="Id" value="@Model?.Id" class="form-control">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" value="@Model?.Name" class="form-control">
            <label asp-for="Distance">Site Distance</label>
            <input asp-for="Distance" value="@Model?.Distance" class="form-control">
            <label asp-for="DefaultTruckCapacity">Truck Capacity</label>
            <input asp-for="DefaultTruckCapacity" value="@Model?.DefaultTruckCapacity" class="form-control">
            <input hidden asp-for="SiteCharges.Id" value="@Model?.SiteCharges?.Id" class="form-control">
            <input hidden asp-for="SiteCharges.SiteId" value="@Model?.SiteCharges?.SiteId" class="form-control">
            <label asp-for="SiteCharges.ExcavationCharge"> Excavation Charge</label>
            <input asp-for="SiteCharges.ExcavationCharge" value="@Model?.SiteCharges?.ExcavationCharge" class="form-control">
            <label asp-for="SiteCharges.ExcavationCharge">LNT Base Charge</label>
            <input asp-for="SiteCharges.LntBasicCharge" value="@Model?.SiteCharges?.LntBasicCharge" class="form-control">
            <label asp-for="SiteCharges.LntBasicCharge">LNT Leading Charge</label>
            <input asp-for="SiteCharges.LntLeadingCharge" value="@Model?.SiteCharges?.LntLeadingCharge" class="form-control">
            <br />
            <input type="submit" value="Add Site" class="btn-primary form-control">           
        </form>
    </div>
</div>