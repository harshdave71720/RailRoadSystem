@model IEnumerable<RailRoad.DataPersistence.Entities.Site>
    <style>
        .table-responsive {
            //height : 300px;
        }
    </style>
    <h1>Sites</h1>
    <div class="table-responsive">
        <table class="table table-hover shadow">
            <thead>
                <tr>
                    <td scope="col">Name</td>
                    <td scope="col">Site Distance<br>(in Kms)</td>
                    <td scope="col">Truck Capacity<br>(in Cubic Metres)</td>
                    <td scope="col">Excavation Charge<br>(in Rs)</td>
                    <td scope="col">LNT 1st Km Charge<br>(in Rs)</td>
                    <td scope="col">LNT Leading Charge<br>(in Rs)</td>
                    <td></td>
                    <td></td>
                    <td><a asp-action="AddSite"><input type="button" class="btn-primary rounded" value="New"></a></td>
                </tr>

            </thead>
            <tbody>
                @if (Model?.Count() > 0)
                {
                    @foreach (var site in Model)
                    {
                        <tr>
                            <td>@site.Name</td>
                            <td>@site.Distance</td>
                            <td>@site.DefaultTruckCapacity</td>
                            <td>@site?.SiteCharges?.ExcavationCharge</td>
                            <td>@site?.SiteCharges?.LntBasicCharge</td>
                            <td>@site?.SiteCharges?.LntLeadingCharge</td>
                            <td><a asp-action=""><input asp-action="" type="button" class="btn-primary rounded" value="Add Trips Data"></a></td>
                            <td><a asp-action=""><input asp-action="" type="button" class="btn-info rounded" value="Details"></a></td>
                            <td><a asp-action="EditSite" asp-route-id="@site.Id"><input type="button" class="btn-primary rounded" value="Edit"></a></td>
                            <td>
                                <a asp-action="DeleteSite" asp-route-id="@site.Id" onclick="return confirm('Are you sure you wish to delete this post?');">
                                    <input type="button" class="btn-danger rounded" value="X">
                                </a>
                            </td>
                            <td></td>
                            <td></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>